# Environment Variables for SubtitleMaker

# Application
APP_NAME="SubtitleMaker"
APP_ENV="development"
APP_DEBUG=true

# Server
SERVER_HOST="127.0.0.1"
SERVER_PORT=8000

# Secret Key - CHANGE IN PRODUCTION
SECRET_KEY="your-secret-key-here-change-in-production"

# Database
DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/subtitle_maker"

# Redis
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# GPU
GPU_ENABLED=true
GPU_DEVICE="cuda:0"
GPU_MEMORY_FRACTION=0.85

# Whisper
WHISPER_MODEL="large-v3"
WHISPER_COMPUTE_TYPE="float16"
WHISPER_BATCH_SIZE=8

# Upload
UPLOAD_MAX_FILE_SIZE_MB=500
UPLOAD_TEMP_DIR="./temp"

# Cache
CACHE_ENABLED=true
CACHE_DIR="./cache"
CACHE_MAX_SIZE_GB=20

# Logging
LOG_LEVEL="INFO"
LOG_FILE="./logs/app.log"

# CORS
CORS_ORIGINS="http://localhost:5173,http://localhost:3000"
